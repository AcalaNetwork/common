{
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "semistandard",
    "plugin:flowtype/recommended"
  ],
  "globals": {
    "expect": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "curly": ["error", "all"],
    "newline-after-var": ["error", "always"],
    "no-alert": "error",
    "no-debugger": "error",
    "no-duplicate-imports": ["error", {
      "includeExports": true
    }],
    "object-curly-spacing": ["error", "always"],
    "object-property-newline": 0,
    "one-var-declaration-per-line": ["error", "always"],
    "padded-blocks": ["error", {
      "blocks": "never",
      "classes": "never",
      "switches": "never"
    }]
  }
}
